.mobile-menu.hystmodal.mobile-menu--main(id='mobileMenuMain' aria-hidden="true")
    .hystmodal__wrap
        .hystmodal__window(role="dialog" aria-modal="true")
            .mobile-menu__content
                .mobile-menu__header
                    .mobile-menu__title Меню
                    +btn({
                        classes: 'mobile-menu__close',
                        tag: 'button',
                        vMode: 'icon',
                        cMode: 'transparent',
                        icon: true,
                        iconName: 'close'
                    })(data-hystclose)

                .mobile-menu__body
                    +btn({
                        classes: 'mobile-menu__link',
                        tag: 'button',
                        vMode: 'link',
                        text: 'Продукция и услуги',
                        cMode: 'transparent',
                        icon: true,
                        iconName: 'card_arrow',
                    })(data-modal="#mobileMenuServices")
